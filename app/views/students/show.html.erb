<div class="col-lg-12">
  <div class="card">
    <div class="card-header text-center">
      <h2>Student Detail</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <p class="lead"><strong>Full Name : </strong> <%= @student.full_name %> </p>
          <p class="lead"><strong>Father Name : </strong> <%= @student.father_name %> </p>
          <p class="lead"><strong>Date of Birth : </strong> <%= @student.date_of_birth %> </p>
          <p class="lead"><strong>Age : </strong> <%= @student.age %> Year </p>
          <p class="lead"><strong>Email : </strong> <%= @student.email %> </p>
          <p class="lead"><strong>Address : </strong> <%= @student.address %> </p>
          <p class="lead"><strong>Blood Group : </strong> <%= @student.blood_group %> </p>
          <p class="lead"><strong>Class Name : </strong> <%= @student.class_name %> </p>
        </div>
        <div class="col-lg-6">
          <%= image_tag(@student.image, class: 'image') if @student.image.attached? %>
        </div>
      </div>
    <%#= link_to 'Edit', edit_admin_student_path(@student), class: 'btn btn-warning mt-3' %>
    <%= link_to 'Back', students_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>
<style>
  .image{
    width: 100%;
    height: 100%;
  }
</style>