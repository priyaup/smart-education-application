<div class="col-lg-12 mb-5">
  <h2>Student List</h2>
   <%#= link_to "New Student", new_student_path, class: 'btn btn-primary btn-sm  mb-3' %> 
  <table class="table table-striped table-sm">
    <thead>
      <th>Full Name</th>
      <th>Father Name</th>
      <th>Date of Birth</th>
      <th>Class Name</th>
      <th>Blood Group</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.father_name %></td>
        <td><%= student.dob %></td>
        <td><%= student.class_name %></td>
        <td><%= student.blood_group %></td>
        <td><%= student.email %></td>
        <td><%= student.address %></td>
        <td>
          <%= link_to 'View', student_path(student), class:'btn btn-primary btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>