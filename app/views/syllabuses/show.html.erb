<div class="col-lg-12">
  <div class="card">
    <div class="card-header text-center">
      <h2>Course Detail</h2>
    </div>
    <div class="card-body">
      <div class="row"> 
        <div class="col-lg-12">
          <p class="lead"><strong>Title : </strong> <%= @syllabus.title %> </p>
          <p class="lead"><strong>Description : </strong> <%= @syllabus.description %> </p>
        </div>
        <div class="col-lg-6">
          <%#= image_tag(@student.image, class: 'image') if @student.image.attached? %>
        </div>
      </div>
    <%#= link_to 'Edit', edit_syllabus_path(@syllabus), class: 'btn btn-warning mt-3' %>
    <%= link_to 'Back', syllabuses_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>
<style>
  .image{
    width: 100%;
    height: 100%;
  }
</style>