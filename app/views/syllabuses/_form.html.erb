<%= form_with(model: syllabus) do |form| %>
<div class="form-group">
	<%= form.label :title %>
	<%= form.text_field :title, class:'form-control mt-2 mb-2' %>
</div>

<div class="form-group">
	<%= form.label :description %>
	<%= form.text_area :description, class:'form-control mt-2 mb-2' %>
</div>

<div class="form-group">
  <%= form.label :student_id %>
  <%= form.select :student_id, options_for_select(Student.pluck(:id)), { }, class: 'form-control mt-2 mb-2' %>
</div>


<div class="form-group">
	<%= form.submit class:'btn btn-primary mt-2 mb-2' %>
	<%= link_to 'Back', syllabuses_path, class:'btn btn-primary mt-2 mb-2' %>
</div>
<% end %>