<div class="col-lg-4 mt-4">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2 mb-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-success mt-2' %><br>
    <%= f.submit "Log in", class:'btn btn-success mt-2' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class:'btn btn-success mt-2' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:'btn btn-success mt-2'%>
  </div>
  <% end %>

  <%#= render "users/shared/links" %>

</div>