<div class="col-lg-4 mt-4">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class:'form-control mt-2 mb-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class:'btn btn-success mt-2' %>
    <%= f.submit "Log in", class:'btn btn-success  mt-2' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class:'btn btn-success  mt-2' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:'btn btn-success  mt-2' %>
  </div>
  <% end %>

  <%#= render "users/shared/links" %>

</div>